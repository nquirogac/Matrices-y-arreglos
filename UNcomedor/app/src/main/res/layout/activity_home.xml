<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/comedor"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/ly"
        android:layout_width="413dp"
        android:layout_height="90dp"
        android:background="#CEDDD3D3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#C61313"
            android:fontFamily="serif"
            android:shadowColor="#070707"
            android:text=" UN"
            android:textColor="#4B1D97"
            android:textSize="65sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#C61313"
            android:fontFamily="serif"
            android:shadowColor="#050505"
            android:text="comedor"
            android:textColor="#119A3F"
            android:textSize="65sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="410dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="#CEDDD3D3"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#090808"
        android:text="  Bienvenido a"
        android:textColor="#131111"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly"
        app:srcCompat="@drawable/user"
        app:tint="#1F2A61" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="138dp"
        android:background="#CEDDD3D3"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="  Nombre: "
                android:textColor="#020202"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nombretv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="  Cédula: "
                android:textColor="#020202"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cedulatv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="  Correo: "
                android:textColor="#020202"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/correotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="  Apoyo: "
                android:textColor="#020202"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/apoyotv"
                android:layout_width="239dp"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="169dp"
        android:layout_height="223dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.36">

        <Button
            android:id="@+id/button"
            android:layout_width="164dp"
            android:layout_height="70dp"
            android:onClick="iraComedores"
            android:text="Ingresar a comedores" />

        <Button
            android:id="@+id/button2"
            android:layout_width="164dp"
            android:layout_height="70dp"

            android:text="Actualizar datos" />

        <Button
            android:id="@+id/button3"
            android:layout_width="164dp"
            android:layout_height="70dp"

            android:onClick="singout"
            android:text="Cerrar sesión" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>